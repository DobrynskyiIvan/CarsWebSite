@model  Car
<div class="col-lg-4">
    <img alt="@Model.name" src="@Model.img" class="img-thumbnail " />
    <h2>Model: @Model.name</h2>
    <p>@Model.shortDesc</p>
    <p>Price: @Model.price.ToString("c")</p>
    <p><a class="btn btn-warning" asp-controller="ShopCart" asp-action="addToCart" asp-route-id="@Model.id">Add to buy List</a></p>
</div>